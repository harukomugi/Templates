{
    //The 'manifest_version' key must be present and set to 2 always.
    "manifest_version": 2,
    
    "name": "Komugi's Extension",    // NEW NAME
    "description": "A template for Chrome extension development.",    // NEW DESCRIPTION
    "version": "0.1",    // NEW VERSION

    "permissions": [
        "tabs"
    ],
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    
    "background" : {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    }
}
